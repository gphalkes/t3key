.POSIX:

# C-compiler flags
CFLAGS=-O2

# Configuration flags and libraries. Include flags here to compile against the
# (n)curses library
CONFIGFLAGS=
CONFIGLIBS=-lcurses

# Installation prefix
prefix=/usr/local

all: src.util/t3keyc/t3keyc

.PHONY: all clean dist-clean
.SUFFIXES: .c .o
.SECONDARY: # Tell GNU make not to delete intermediate files

SILENTCC=@echo '[CC]' $< ;
SILENTLD=@echo '[LD]' $@ ;

OBJECTS_T3KEYC=<OBJECTS_T3KEYC>

clean:
	rm -rf src.util/t3keyc/*.o src.util/t3keyc/t3keyc

dist-clean: clean

.c.o:
	$(SILENTCC) $(CC) $(CFLAGS) $(CONFIGFLAGS) -c -o $@ $<

src.util/t3keyc/t3keyc: $(OBJECTS_T3KEYC)
	$(SILENTLD) $(CC) $(CFLAGS) $(LDFLAGS) -o $@ $(OBJECTS_T3KEYC) $(LDLIBS) $(CONFIGLIBS)


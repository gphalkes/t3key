.POSIX:

# C-compiler flags
CFLAGS=-O2

# Configuration flags and libraries. Add -DNO_AUTOLEARN if you do not wish to
# compile the auto-learn option which requires XCB or Xlib. Include flags here
# to compile against the libtinfo or (n)curses library
CONFIGFLAGS=
CONFIGLIBS=

# Flags and libraries to compile against XCB or Xlib. To compile against Xlib,
# also add -DUSE_XLIB
X11_FLAGS=
X11_LIBS=

# Installation prefix
prefix=/usr/local

all: src.util/t3learnkeys/t3learnkeys

.PHONY: all clean dist-clean
.SUFFIXES: .c .o
.SECONDARY: # Tell GNU make not to delete intermediate files

SILENTCC=@echo '[CC]' $< ;
SILENTLD=@echo '[LD]' $@ ;

OBJECTS=<OBJECTS>

clean:
	rm -rf src.util/t3learnkeys/*.o src.util/t3learnkeys/t3learnkeys

dist-clean: clean

.c.o:
	$(SILENTCC) $(CC) $(CFLAGS) $(CONFIGFLAGS) $(X11_FLAGS) -Isrc.util -c -o $@ $<

src.util/t3learnkeys/t3learnkeys: $(OBJECTS)
	$(SILENTLD) $(CC) $(CFLAGS) $(LDFLAGS) -o $@ $(OBJECTS) $(LDLIBS) $(CONFIGLIBS) $(X11_LIBS)

